                         "/srv/samba/schools/bsz/share/management",                                      # ntacl
                         "/srv/samba/schools/bsz/share/school",                                      # ntacl
                         "/srv/samba/schools/bsz/students/m7ab",
                         "/srv/samba/schools/bsz/share/classes/m7ab",
