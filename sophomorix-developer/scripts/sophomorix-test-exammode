                 "/examusers/jonsonad72-exam",
                 $root_dns,
                 $smb_admin_pass,
                 \%fs_test_result,
                 "REVISION:1",
                 "CONTROL:SR|DP",
                 'OWNER:LINUXMUSTER\jonsonad72-exam', 
