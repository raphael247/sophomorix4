                         "/srv/samba/schools/default-school/students",
                         "/srv/samba/schools/default-school/students/s6ade",
                         "/srv/samba/schools/default-school/share/classes/s6ade",
                         "/srv/samba/schools/default-school/students/s6ade/schneima72",
