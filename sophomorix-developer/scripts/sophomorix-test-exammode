                         "/srv/samba/schools/bsz/teachers",
                         "/srv/samba/schools/bsz/teachers/oe72",
                         "/srv/samba/schools/bsz/teachers/oe72/transfer",
#                         "/srv/samba/schools/bsz/teachers/oe72/_einsammeln",
